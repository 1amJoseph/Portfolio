---
import { getCollection, type CollectionEntry } from "astro:content";
import ProjectCard from "./ProyectCard.astro";

const proyects = await getCollection("proyects");
type Proyect = CollectionEntry<"proyects">;
---

<section id="proyects" class="mt-32 pt-20 fade-up">
  <h2
    class="text-2xl md:text-3xl text-slate-50 lg:text-4xl xl:text-5xl font-bold mb-10 text-center"
  >
    Projects
  </h2>

  <div class="grid gap-10 sm:grid-cols-1 md:grid-cols-2 w-[95%] mx-auto">
    {proyects.map((proyect: Proyect) => <ProjectCard {...proyect.data} />)}
  </div>
</section>
