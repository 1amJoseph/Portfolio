---
import "../styles/global.css";
import "../styles/animations.css";
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Metadata -->

    <!-- SEO + Open Graph + Twitter Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta -->
    <title>Portfolio | José Herrera</title>
    <meta
      name="description"
      content="Desarrollador de software con enfoque en interfaces modernas y eficientes."
    />
    <meta name="author" content="José Herrera" />
    <meta name="theme-color" content="rgb(10, 10, 10)" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Portfolio | José Herrera" />
    <meta
      property="og:description"
      content="Desarrollador de software con enfoque en interfaces modernas y eficientes."
    />
    <meta property="og:image" content="/public/preview.png" />
    <meta
      property="og:image:alt"
      content="Vista previa del portafolio de José Herrera"
    />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Portfolio | José Herrera" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Portfolio | José Herrera" />
    <meta
      name="twitter:description"
      content="Desarrollador de software con enfoque en interfaces modernas y eficientes."
    />
    <meta name="twitter:image" content="/public/preview.png" />
    <meta
      name="twitter:image:alt"
      content="Vista previa del portafolio de José Herrera"
    />

    <!-- Links & Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="canonical" href="https://ucalledjoseph.vercel.app/" />

    <!-- Extra (para buscadores y redes) -->
    <meta name="robots" content="index, follow" />
    <meta
      name="keywords"
      content="José Herrera, desarrollador, software, frontend, portfolio, astro, tailwind"
    />

    <!-- Social Links (opcional para SEO semántico) -->
    <link rel="me" href="https://github.com/1amJoseph" />
    <link rel="me" href="https://www.linkedin.com/in/josephherrera1/" />

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="images/favicon.webp" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio | Jose Herrera</title>
    <meta
      name="description"
      content="Portfolio de José Hernández — Desarrollador de software especializado en soluciones modernas con Astro y TailwindCSS."
    />
  </head>
  <body>
    <div
      class="fixed top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <slot />
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap");

  html,
  body {
    box-sizing: border-box;
    margin: 0;
    width: 100%;
    height: 100%;
    color-scheme: light dark;
    font-family: "Inter", sans-serif;
    scroll-behavior: smooth;
  }
</style>
